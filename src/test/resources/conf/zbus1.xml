<?xml version="1.0" encoding="UTF-8"?>
<zbus>   
	<serverHost>0.0.0.0</serverHost>  
	<serverPort>15555</serverPort>  
	<serverName></serverName> <!-- Public IP/Domain name -->  
	
	<defaultSslCertFile>ssl/zbus.crt</defaultSslCertFile> 
	
	<sslEnabled certFile="ssl/zbus.crt" keyFile="ssl/zbus.key">false</sslEnabled> 

	<storePath>/tmp/zbus</storePath> 
	<verbose>false</verbose>  
	<compatible>true</compatible>  <!-- Enable compatible to zbus7 -->
	
	<!-- 
	<trackerList>
		<serverAddress>
			<address>localhost:15556</address>  
			<sslEnabled certFile="ssl/zbus.crt">false</sslEnabled> 
		</serverAddress>   
	</trackerList>  
	-->  
	
	
	<!-- HttpProxy requires zbus server, capable of working in DMZ network enviornment -->
	<httpProxy>  
		<proxy>
			<urlPrefix>http</urlPrefix> 
			<target>http://localhost:15555/server</target> 
			<zbusServer></zbusServer> <!-- empty means connection inproc -->
		</proxy> 
	</httpProxy>
	
	<!-- TcpProxy, no need zbus server -->
	<tcpProxy>  
		<server>0.0.0.0:80</server>
		<target>localhost:15555</target>
		<connectTimeout>3000</connectTimeout>
		<readTimeout>10000</readTimeout> 
	</tcpProxy>
	
</zbus>


<?xml version="1.0" encoding="UTF-8"?>
<zbus>   
	<serverHost>0.0.0.0</serverHost>  
	<serverPort>15555</serverPort>  
	<serverName></serverName> <!-- Public IP/Domain name -->  
	
	<defaultSslCertFile>ssl/zbus.crt</defaultSslCertFile> 
	
	<sslEnabled certFile="ssl/zbus.crt" keyFile="ssl/zbus.key">false</sslEnabled> 

	<storePath>/tmp/zbus</storePath> 
	<verbose>false</verbose>  
	<compatible>false</compatible>  <!-- Enable compatible to zbus7 -->
	
	<!-- 
	<trackerList>
		<serverAddress>
			<address>localhost:15556</address>  
			<sslEnabled certFile="ssl/zbus.crt">false</sslEnabled> 
		</serverAddress>   
	</trackerList>  
	-->   
	
	<auth enabled="true" class=""> <!-- class to replace io.zbus.mq.server.auth.DefaultAuthProvider -->
		
		<token value="MyTopic_Group1" operation="declare,produce,consume"> 
			<topic value="MyTopic">	
				<consumeGroup>Group1</consumeGroup> 
			</topic>
		</token>  
		
		<token value="admin" operation="admin"/>   
		
		<token value="produce_all" operation="produce"> <!-- rpc = produce -->
			<topic value="*"/>
		</token>    
		
		<token value="myrpc_client" operation="produce"> 
			<topic value="MyRpc"/>
		</token>   
		
		<token value="myrpc_service" operation="declare,consume,route"> <!-- route required to reply -->
			<topic value="MyRpc"/>
		</token>  
		
		<token value="myrpc_all" operation="*"> 
			<topic value="MyRpc"/>
		</token>  
		
		<token value="tracker" operation="track_sub"> 
			<topic value="*"/>
		</token>  
				
	</auth>  
	
</zbus>

